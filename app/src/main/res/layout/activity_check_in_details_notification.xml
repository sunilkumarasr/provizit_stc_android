<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <include
            android:id="@+id/relative_internet"
            layout="@layout/no_internet"/>

        <LinearLayout
            android:id="@+id/relative_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/checkIn_request"
                    style="@style/medium_font"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_create_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"
                    style="@style/medium_font"/>

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="*******"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        style="@style/medium_font"
                        android:textSize="17dp"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/colorPrimary">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/pic"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/user"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:text="**************"
                        android:textColor="@color/colorPrimary"
                        style="@style/medium_font"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*****@gmail.com"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        style="@style/regular_font"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**********"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        style="@style/regular_font"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:id="@+id/line_origanization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/company_icon"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txt_origanization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/regular_font"
                            android:textColor="@color/gray"
                            android:text="*******"
                            android:singleLine="true"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linaer_checkInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            style="@style/medium_font"/>
                        <TextView
                            android:id="@+id/txt_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="***"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            style="@style/medium_font"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linaer_location_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/where"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            style="@style/medium_font"/>
                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            style="@style/medium_font"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/leanear_stamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/txt_stamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            style="@style/medium_font"
                            android:textSize="12dp"
                            android:text="****"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="45dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_assign"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                app:cardElevation="3dp"
                                app:cardBackgroundColor="@color/card_hash"
                                android:outlineSpotShadowColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/assign_icc"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                style="@style/medium_font"
                                android:text="@string/assign"
                                android:textSize="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_checkout"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                app:cardElevation="3dp"
                                android:outlineSpotShadowColor="@color/colorPrimary"
                                android:outlineAmbientShadowColor="@color/colorPrimary">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/accept_icc"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                style="@style/medium_font"
                                android:text="@string/checkout"
                                android:textSize="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_accept"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                app:cardElevation="3dp"
                                android:outlineSpotShadowColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/accept_icc"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                style="@style/medium_font"
                                android:text="@string/accept"
                                android:textSize="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linear_decline"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                app:cardElevation="3dp"
                                android:outlineSpotShadowColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/decline_icc"
                                    android:scaleType="fitXY"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                style="@style/medium_font"
                                android:text="@string/decline"
                                android:textSize="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linear_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="-6dp"
                            android:text="@string/note"
                            android:textColor="@color/colorPrimary"
                            style="@style/medium_font"
                            android:textSize="15dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="8dp">
                            <TextView
                                android:id="@+id/txt_note"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="**************************************************************************************************"
                                android:textColor="@color/gray"
                                android:layout_marginTop="3dp"
                                android:textSize="12dp"
                                style="@style/medium_font"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linear_pdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pdfshow"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/txt_pdf_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Pdf"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13dp"
                            style="@style/medium_font"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>

</layout>