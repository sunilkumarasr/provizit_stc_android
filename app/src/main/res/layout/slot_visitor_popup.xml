<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:id="@+id/s_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:windowSoftInputMode="stateHidden"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/s_title"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/s_cancel"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/cancel_ic"
                            android:backgroundTint="@color/white"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXXXXXXXX"
                            android:id="@+id/s_name"
                            android:layout_marginTop="50dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_bold"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/body"
                        android:layout_below="@id/s_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/invitee_details"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/purpose_of_visit"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxx"
                                android:id="@+id/s_purpose"
                                android:layout_marginTop="1.5dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Category"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxx"
                                android:id="@+id/s_category"
                                android:layout_marginTop="1.5dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_address"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxx"
                                android:id="@+id/s_email"
                                android:layout_marginTop="1.5dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_number"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxx"
                                android:id="@+id/s_mobile"
                                android:layout_marginTop="1.5dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/organization"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxx"
                                android:layout_marginTop="1.5dp"
                                android:textSize="14sp"
                                android:id="@+id/s_company"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:id="@+id/s_pic"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"/>
    </RelativeLayout>

</RelativeLayout>