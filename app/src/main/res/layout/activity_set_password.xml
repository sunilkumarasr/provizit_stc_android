<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center_horizontal">
        <include
            android:id="@+id/relative_internet"
            layout="@layout/no_internet"/>

        <RelativeLayout
            android:id="@+id/relative_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/appbarlayout"
                    android:elevation="4dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:titleTextColor="#ffffff">
                    </androidx.appcompat.widget.Toolbar>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="180dp"
                    android:layout_below="@+id/appbarlayout"
                    android:layout_marginTop="30dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/logo" />
                <TextView
                    android:id="@+id/email"
                    android:layout_above="@+id/inputs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    style="@style/medium_font"
                    android:text="johndoy1122@example.com"
                    android:textSize="@dimen/edittext_size" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/inputs"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/useidLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/p_ptl"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/please_choose_your_password"
                            app:boxBackgroundColor="#ffffff">
                            <EditText
                                android:drawableStart="@drawable/ic_icon_awesome_unlock"
                                android:id="@+id/e_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:paddingStart="18dp"
                                style="@style/regular_font"
                                android:inputType="textPassword"
                                android:padding="12dp"
                                android:textSize="@dimen/edittext_size"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/c_ptl"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:hint="@string/please_reenter_your_password"
                            app:boxBackgroundColor="#ffffff"
                            app:passwordToggleEnabled="true">
                            <EditText
                                android:drawableStart="@drawable/ic_icon_awesome_unlock"
                                android:id="@+id/c_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:paddingStart="18dp"
                                style="@style/regular_font"
                                android:inputType="textPassword"
                                android:padding="12dp"
                                android:textSize="@dimen/edittext_size"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_st"
                        android:visibility="gone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/useidLinear"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Password"
                        app:boxBackgroundColor="#ffffff">
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userid_at"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/ic_lock_open_black_24dp"
                            android:drawablePadding="5dp"
                            style="@style/regular_font"
                            android:inputType="textPassword"
                            android:padding="12dp"
                            android:paddingStart="18dp"
                            android:singleLine="true"
                            android:textSize="@dimen/edittext_size"
                            tools:ignore="RtlSymmetry" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/password_st"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        style="@style/medium_font"
                        android:text="Forgot Password ? "
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/forgot_password"
                        android:layout_margin="30dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ripple"
                            style="@style/medium_font"
                            android:padding="10dp"
                            android:text="@string/back"
                            android:drawablePadding="-15dp"
                            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
                            android:textColor="#fff"
                            android:textSize="@dimen/edittext_size" />
                        <Button
                            android:id="@+id/next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ripple"
                            android:drawablePadding="-15dp"
                            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                            style="@style/medium_font"
                            android:padding="10dp"
                            android:text="@string/next"
                            android:textColor="#fff"
                            android:textSize="@dimen/edittext_size" />
                    </LinearLayout>


                </RelativeLayout>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="112dp"
                    android:layout_height="13dp"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</layout>