<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/a_color</item>


        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowContentTransitions">false</item>

    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="ChipTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BottomSheetSearchDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SearchAppModalStyle</item>
    </style>

    <style name="SearchAppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/search_bottom_popup</item>
    </style>

    <!--    fonts-->
    <style name="medium_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_medium</item>
    </style>

    <style name="regular_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_regular</item>
    </style>

    <style name="bold_font">
        <item name="android:fontFamily">@font/arbfont_dinnext_bold</item>
    </style>

    <style name="light_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_light</item>
    </style>

</resources>
